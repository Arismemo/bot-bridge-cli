{
  "name": "bot-bridge",
  "version": "2.0.0",
  "description": "OpenClaw Bot Intercommunication Service - Context-Aware Version",
  "main": "server/index.js",
  "bin": {
    "bot-bridge-server": "./scripts/bot-bridge-server.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USER/bot-bridge.git"
  },
  "homepage": "https://github.com/YOUR_USER/bot-bridge#readme",
  "bugs": {
    "url": "https://github.com/YOUR_USER/bot-bridge/issues"
  },
  "scripts": {
    "test": "jest tests/",
    "test:client": "jest tests/client*.js",
    "test:server": "nyc node tests/test-integration.js",
    "test:coverage": "jest tests/ --coverage --coverageReporters=text --coverageReporters=html",
    "start": "node server/index.js",
    "start:webhook": "node webhook-server.js",
    "start:client": "node client/example.js",
    "install-server": "bash install-server.sh",
    "postinstall": "chmod +x scripts/bot-bridge-server.sh"
  },
  "jest": {
    "collectCoverageFrom": [
      "client/**/*.js",
      "server/**/*.js",
      "webhook-server.js"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coverageDirectory": "coverage"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^17.1.0"
  },
  "keywords": [
    "openclaw",
    "bot",
    "bridge"
  ],
  "author": "Bot Bridge Team",
  "license": "MIT"
}
